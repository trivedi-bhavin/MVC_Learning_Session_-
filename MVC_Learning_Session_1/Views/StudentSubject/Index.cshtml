@model IEnumerable<MVC_Learning_Session_1.Models.VM_Subjects_Group>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("Submit", "StudentSubject", new { EnrollmentNo = @ViewBag.EnrollmentNo }, FormMethod.Post))
    {
        <h2>Index-DropDownListDemo</h2>
        <table class="table table-bordered">
            <thead>
                <Tr>
                    <td>
                        Code
                    </td>
                    <td>
                        Name
                    </td>
                    <td>
                        Type
                    </td>
                </Tr>
            </thead>
            <tbody>
                @{ var i = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ErollmentNo</td>
                        <td style="display:none"> <input type="text" name="[@i].ErollmentNo" value="@item.ErollmentNo" readonly></td>
                        @*<td>@Html.DropDownList("subjectList", item.SubjectName)</td>*@
                        <td>@Html.DropDownList("[" + @i + "].SelectedItemName", item.SubjectName)</td>
                        @*<td>@item.SubjectType</td>*@
                        <td><input type="text" name="[@i].SubjectType" value="@item.SubjectType"></td>

                    </tr>
                    i += 1;
                }
            </tbody>
        </table>
        <input type="submit" value="Submit Details" />
    }
</div>


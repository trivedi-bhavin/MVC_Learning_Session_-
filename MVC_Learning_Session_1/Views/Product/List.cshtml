@model IEnumerable<MVC_Learning_Session_1.Models.Product>
@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<table class="table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(k=> k.Id)</th>
        <th>@Html.DisplayNameFor(k=>k.Name)</th>
        <th>@Html.DisplayNameFor(k=>k.Category)</th>
        <th>@Html.DisplayNameFor(k=>k.Rate)</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(k=>item.Id)</td>
            <td>@Html.DisplayFor(k=>item.Name)</td>
            <td>@Html.DisplayFor(k=>item.Category)</td>
            <td>@Html.DisplayFor(k=>item.Rate)</td>
        </tr>
    }
</table>

<p>Total Products: @Model.Count()</p>

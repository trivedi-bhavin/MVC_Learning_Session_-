@model MVC_Learning_Session_1.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Product</h2>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">

            @Html.AntiForgeryToken()
            <div class="form-group">
                    @Html.LabelFor(m=>m.Id)
                <div class="col-md-10">
                    @Html.EditorFor(m=>m.Id)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.Name)
                <div class="col-md-10">
                    @Html.EditorFor(m=>m.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.Category)
                <div class="col-md-10">
                    @Html.EditorFor(m=>m.Category)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m=>m.Rate)
                <div class="col-md-10" >
                    @Html.EditorFor(m=>m.Rate)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Save" class="btn-default" />
                </div>
            </div>
        </div>

    }
<div>
    @Html.ActionLink("List","List")
</div>